
 <!-- page title -->
    <div class="page-title-section">
        <div class="page-title-wrap">
            <div class="page-title-overlay"></div>
            <div class="page-title-info">
                <h1 class="page-title">Signin Page</h1>
            </div>
        </div>
    </div>

    <!-- registar -->
    <div class="registar-section pd-top-100 pd-bottom-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 contact-main">
                    <h3 class="form-title">Signin form</h3>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "registar-form"}) do |f| %>
                            <%= f.label :name %>
                            <%= f.text_field :name, :class => "input" %>
                            <%= f.label :email %>
                            <%= f.email_field :email, :class => "input", autofocus: true %>
                            <%= f.label :password %>
                            <%= f.password_field :password, :class => "input",autocomplete: "off" %>
                          <% if devise_mapping.rememberable? -%>
                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                          <% end %>
                          <div class="actions">
                            <%= f.submit "Signin", :class => "btn" %>
                          </div>
                          <hr>
                           <%= link_to '<i class="fa fa-facebook"></i>  Signin with Facebook'.html_safe, user_facebook_omniauth_authorize_path,:class => "btn", :style => "width:100%; font-size:18px; padding:20px;" %>
                           <%= render "devise/shared/links" %>
                        <% end -%>
                         
                </div>
            </div>
        </div>
    </div>

                        